# В данном файле описаны базовые консольные команды Apache Kafka

# Создание топика
/bin/kafka-topics.sh --bootstrap-server localhost:9092 --create --topic TOPIC_NAME

# Просмотр списка топиков на брокере или кластере
/bin/kafka-topics.sh --bootstrap-server localhost:9092 --list

# Узнать координатора группы
/bin/kafka-consumer-groups.sh --bootstrap-server localhost:9092 --group GROUP_NAME --state
